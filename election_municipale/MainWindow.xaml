<Window x:Class="election_municipale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:election_municipale"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    

    <DockPanel>
        <!-- barre de titre -->
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Beige" Height="50">
			<Label x:Name="titreLabel" Content="Election Municipale" FontSize="12" FontWeight="Bold" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Margin="0,12,0,0"/>
        </StackPanel>
        
        <!--StackPanel contenant les fonctions d'insertion -->
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="50" Background="Beige">
            <Button x:Name="buttonInsertionDonneesCsv" Content="Insérer des données depuis un fichier csv" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,15,0,0"/>
        </StackPanel>

        <!-- StackPanel permettant d'afficher les tables qui ont été insérées dans la BDD -->
        <StackPanel DockPanel.Dock="Left" Width="75" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Beige">
            
        </StackPanel>
        
        <!--StackPanel contenant les requêtes de l'énoncé -->
        <StackPanel DockPanel.Dock="Right" Width="75" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Beige">
            
        </StackPanel>
        
        <!--StackPanel contenant l'affichage des données -->
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White">
            
        </StackPanel>
        
    </DockPanel>
</Window>
