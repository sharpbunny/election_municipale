<Window x:Class="election_municipale.RedirectionWeb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:election_municipale"
        mc:Ignorable="d"
        Title="Redirection vers une page web" Height="125" Width="500" WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <Label x:Name="redirectionMessageLabel" Content="Vous allez être redirigé(e) vers une page web externe à ce programme." Margin="0,0,0,0"/>
        <Label x:Name="continuerLabel" Content="Souhaitez-vous continuer ?" Margin="0,0,0,0"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="continuerButton" Content="Continuer" Width="75" Margin="100,5,0,0" Click="continuerButton_Click"/>
            <Button x:Name="exitButton" Content="Fermer" Width="75" Margin="150,5,0,0" Click="exitButton_Click"/>

        </StackPanel>
    </StackPanel>
</Window>
